# 10. Main: run v0 then v1, plot both
# ============================================================

if __name__ == "__main__":
    TRAIN_EPISODES_FULL = 800
    VAL_EPISODES_FINAL = 100
    TEST_EPISODES_FINAL = 100

    # ---- Output folder ----
    wd = os.getcwd()
    save_folder = os.path.join(wd, "save_runs_v0_v1_speedfix")
    os.makedirs(save_folder, exist_ok=True)

    # ---- Greedy benchmarks (optional lines) ----
    GREEDY_BENCHMARK_V0 = 221.77
    GREEDY_BENCHMARK_V1 = None  # set if you have one

    # Variant-specific configs (keep your best for v0; tune v1 as needed)
    CONFIG_V0 = dict(
        gamma=0.9389065584049,
        epsilon=1.0,
        epsilon_decay=0.99,
        epsilon_min=0.079088807071618797,
        batch_size=32,
        units=128,
        tau=0.0010323839507959762,

        use_per=True,
        per_alpha=0.4,
        per_beta0=0.2,
        per_beta1=1.0,
        per_eps=1e-6,
        per_beta_anneal_steps=200_000,

        n_step=1,
        use_noisy=True,
        noisy_sigma0=0.12546649741233012,

        use_distributional=False,
        num_atoms=51,
        vmin=-200.0,
        vmax=200.0,

        variant_name="v0_speedfix"
    )

    CONFIG_V1 = dict(
        gamma=0.9389065584049,
        epsilon=1.0,
        epsilon_decay=0.99,
        epsilon_min=0.079088807071618797,
        batch_size=32,
        units=128,
        tau=0.0010323839507959762,

        use_per=True,
        per_alpha=0.4,
        per_beta0=0.2,
        per_beta1=1.0,
        per_eps=1e-6,
        per_beta_anneal_steps=200_000,

        n_step=3,              # if you want to keep n_step=1, set to 1
        use_noisy=True,
        noisy_sigma0=0.12546649741233012,

        use_distributional=False,
        num_atoms=51,
        vmin=-200.0,
        vmax=200.0,

        variant_name="v1_speedfix"
    )

    # Run variant 0 then variant 1
    res_v0 = run_variant(
        variant=0,
        cfg=CONFIG_V0,
        save_folder=save_folder,
        train_eps=TRAIN_EPISODES_FULL,
        val_eps=VAL_EPISODES_FINAL,
        test_eps=TEST_EPISODES_FINAL
    )

    res_v1 = run_variant(
        variant=1,
        cfg=CONFIG_V1,
        save_folder=save_folder,
        train_eps=TRAIN_EPISODES_FULL,
        val_eps=VAL_EPISODES_FINAL,
        test_eps=TEST_EPISODES_FINAL
    )

    results = [res_v0, res_v1]

    # Plot
    fig, axes = plt.subplots(1, 2, figsize=(16, 6))
    window = 25
    kernel = np.ones(window, dtype=np.float32) / float(window)

    for ax, res in zip(axes, results):
        variant = res["variant"]
        r = res["train_rewards"]
        x = np.arange(1, len(r) + 1)

        ax.plot(x, r, alpha=0.15, label="Train (raw)")
        if len(r) >= window:
            mov = np.convolve(r, kernel, mode="valid")
            xm = np.arange(window, len(r) + 1)
            ax.plot(xm, mov, label=f"Train ({window}-ep avg)")

        ax.axhline(y=res["val_mean"], linestyle=":", alpha=0.9, label=f"Val avg ({res['val_mean']:.1f})")
        ax.axhline(y=res["test_mean"], linestyle="--", alpha=0.9, label=f"Test avg ({res['test_mean']:.1f})")

        if variant == 0 and GREEDY_BENCHMARK_V0 is not None:
            ax.axhline(y=GREEDY_BENCHMARK_V0, linestyle="-.", color="black", alpha=0.8,
                       label=f"Greedy ({GREEDY_BENCHMARK_V0:.2f})")
        if variant == 1 and GREEDY_BENCHMARK_V1 is not None:
            ax.axhline(y=GREEDY_BENCHMARK_V1, linestyle="-.", color="black", alpha=0.8,
                       label=f"Greedy ({GREEDY_BENCHMARK_V1:.2f})")

        ax.set_title(f"Variant {variant} | {res['config'].get('variant_name','')}")
        ax.set_xlabel("Training episode")
        ax.set_ylabel("Reward")
        ax.grid(alpha=0.3)
        ax.legend()

    plt.tight_layout()
    out_plot = os.path.join(save_folder, "v0_v1_train_val_test_speedfix.png")
    plt.savefig(out_plot, dpi=150)
    print(f"\nSaved plot to: {out_plot}")
    plt.show()
